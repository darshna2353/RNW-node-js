<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to your CSS -->
    <title>User Management</title>
</head>
<style>
    /* Reset some default styles */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
    }

    /* Background with gradient */
    body {
        background: linear-gradient(to right, #b2fff1, #57fd8f);

        color: #333;
    }

    /* Main container styling */
    .container {
        max-width: 800px;
        margin: 40px auto;
        padding: 40px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
    }

    /* Header styling */
    h2 {
        font-size: 2.2rem;
        color: #4CAF50;
        margin-bottom: 25px;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 2px;
        border-bottom: 2px solid #4CAF50;
        display: inline-block;
        padding-bottom: 10px;
    }

    /* Form styles */
    .user-form table {
        width: 100%;
        margin-bottom: 30px;
    }

    .user-form input[type="text"],
    .user-form input[type="date"] {
        width: 100%;
        padding: 15px;
        margin: 8px 0;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 1rem;
    }

    .submit-button {
        width: 100%;
        padding: 15px;
        background: linear-gradient(to right, #43e97b, #38f9d7);
        color: white;
        font-size: 1.2rem;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .submit-button:hover {
        background: linear-gradient(to right, #38f9d7, #43e97b);
    }

    /* Table styling */
    .user-list {
        width: 100%;
        border-collapse: collapse;
        border-radius: 8px;
        overflow: hidden;
    }

    .user-list th, .user-list td {
        padding: 15px;
        text-align: left;
        border: 1px solid #ddd;
    }

    .user-list th {
        background: linear-gradient(to right, #bf86fc, #81abf5);
        color: white;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .user-list tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .user-list tr:hover {
        background-color: #f1f1f1;
    }

    /* Action links (Delete, Edit) */
    .action-link {
        color: #52a2f7;
        font-weight: bold;
        text-decoration: none;
        padding: 8px 12px;
        border-radius: 5px;
        background-color: rgba(0, 123, 255, 0.1);
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .action-link:hover {
        background-color: rgba(0, 123, 255, 0.2);
        transform: scale(1.05);
    }

    /* Responsive design */
    @media (max-width: 768px) {
        .container {
            padding: 20px;
        }

        h2 {
            font-size: 1.8rem;
        }

        .submit-button {
            font-size: 1rem;
        }
    }

    @media (max-width: 480px) {
        .container {
            padding: 15px;
        }

        h2 {
            font-size: 1.6rem;
        }

        .submit-button {
            font-size: 0.9rem;
        }
    }
</style>
<body>
    <div class="container">
        <h2>Add User</h2>
        <form action="/recordInsert" method="post" class="user-form">
            <table>
                <tr>
                    <td><label for="name">Name:</label></td>
                    <td><input type="text" name="name" id="name" required></td>
                </tr>
                <tr>
                    <td><label for="phone">Phone:</label></td>
                    <td><input type="text" name="phone" id="phone" required></td>
                </tr>
                <tr>
                    <td><label for="date">Date:</label></td>
                    <td><input type="date" name="date" id="date" required></td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" value="Add User" class="submit-button"></td>
                </tr>
            </table>
        </form>

        <h2>View Users</h2>
        <table class="user-list">
            <thead>
                <tr>
                    <th>Sr No</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% all.forEach((u, i) => { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= u.name %></td>
                        <td><%= u.phone %></td>
                        <td><%= u.date %></td>
                        <td>
                            <a href="/delete?deleteid=<%= u.id %>" class="action-link">Delete</a> ||
                            <a href="/edit?id=<%= u.id %>" class="action-link">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
