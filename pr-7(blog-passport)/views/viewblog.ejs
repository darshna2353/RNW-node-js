<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Business Blog</title>
    <link rel="shortcut icon" type="image/x-icon" href="assets/frontend/img/favicon.png">
    <!-- Fonts and Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f9f9f9;
        }

        /* Header Styles */
        header {
            background: linear-gradient(135deg, #1a73e8, #3b82f6);
            color: white;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        header .header-top {
            padding: 15px 0;
        }

        header h2 {
            margin: 0;
            font-size: 2rem;
        }

        .header-right-btn .btn {
            margin-left: 10px;
            background-color: #ffd600;
            color: #333;
            font-weight: bold;
            border: none;
            padding: 10px 15px;
            border-radius: 8px;
            transition: background 0.3s ease;
        }

        .header-right-btn .btn:hover {
            background-color: #ffca28;
            transform: translateY(-2px);
        }

        /* Hero Section */
        .slider-area {
            position: relative;
            text-align: center;
        }

        .slider-area .hero-cap {
            margin-top: 30px;
            font-size: 2.5rem;
            text-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
        }

        /* Blog Section */
        .blog_area {
            padding: 60px 0;
        }

        .blog_item {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .blog_item:hover {
            transform: translateY(-10px);
            box-shadow: 0px 12px 30px rgba(0, 0, 0, 0.2);
        }

        .blog_item_img img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .blog_details {
            padding: 20px;
        }

        .blog_details h2 {
            font-size: 1.8rem;
            color: #1a73e8;
        }

        .blog_details p {
            font-size: 0.95rem;
            color: #555;
            margin: 15px 0;
        }

        .blog_details .actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .blog_details .actions a {
            font-size: 0.95rem;
            color: #1a73e8;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        .blog_details .actions a:hover {
            color: #ff6f61;
        }

        @media (max-width: 768px) {
            header h2 {
                font-size: 1.5rem;
            }

            .hero-cap {
                font-size: 1.8rem;
            }
        }
    </style>
</head>

<body>

    <!-- Header -->
    <header>
        <div class="header-top">
            <div class="container d-flex justify-content-between align-items-center">
                <h2>Business Blog</h2>
                <div class="header-right-btn">
                    <a href="addblogpage" class="btn">Add Blog</a>
                    <a href="logout" class="btn">Logout</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <div class="slider-area">
        <div class="single-slider slider-height2 d-flex align-items-center text-center"
            style="background: linear-gradient(rgba(26, 115, 232, 0.8), rgba(26, 115, 232, 0.8)), url('assets/frontend/img/hero/Industries_hero.jpg') no-repeat center/cover; height: 250px;">
            <div class="container">
                <h2 class="hero-cap text-white">Our Blog</h2>
            </div>
        </div>
    </div>

    <!-- Blog Section -->
    <section class="blog_area">
        <div class="container">
            <div class="row g-4">
                <% users.map((val, index) => { const { title, desc, image } = val %>
                <div class="col-md-6 col-lg-4">
                    <div class="blog_item">
                        <div class="blog_item_img">
                            <img src="<%= image %>" alt="Blog Image">
                        </div>
                        <div class="blog_details">
                            <h2><%= title %></h2>
                            <p><%= desc %></p>
                            <div class="actions">
                                <a href="/delete?id=<%= val.id %>">Delete</a>
                                <a href="/edit?id=<%= val.id %>">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>
